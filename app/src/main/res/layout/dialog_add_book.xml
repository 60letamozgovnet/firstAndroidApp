<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/titleForBk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="18"
                android:hint="Название книги"
                android:inputType="text"
                android:text="" />

            <EditText
                android:id="@+id/authorForBk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="18"
                android:hint="Автор"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:text="" />

            <EditText
                android:id="@+id/genreForBk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="18"
                android:hint="Жанр"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:text="" />

            <EditText
                android:id="@+id/countPagesForBk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="18"
                android:hint="Количество страниц"
                android:inputType="number"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/saveForBk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#B56565"
                android:text="Сохранить"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>